<%= simple_form_for [@commentable, comment] do |f| %>
  <div class="mb-4">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.input :comment, label: false, input_html: {data: {controller: "textarea-autogrow"}} %>

    <div>
      <%= hidden_field_tag :commentable_type, @commentable.try(:class) %>
      <%= hidden_field_tag :commentable_id, @commentable.try(:id) %>
      <%= f.submit "Submit", class: "btn btn--primary" %>
    </div>
  </div>
<% end %>
