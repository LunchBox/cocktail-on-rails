<%= simple_form_for recipe, html: { class: "my-4" } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.file_field :cover_image if false %>
  <%= f.input :name, label_html: {class: "block"}, input_html: {autofocus: true, placeholder: "Recipe Name"}, wrapper_html: {class: "mb-2"} %>
  <%= f.input :desc, label_html: {class: "block"}, input_html: {autofocus: true, data: {controller: "textarea-autogrow"}}, wrapper_html: {class: "mb-2"} %>
  <%= link_to "Cancel", :recipes, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end%>
