<%= simple_form_for recipe, html: { class: "my-4" } do |f| %>
  <% if recipe.errors.any? %>
    <div class="error-message">
      <%= recipe.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.file_field :cover_image if false %>
  <%= f.input :name, label: false, input_html: {autofocus: true, placeholder: "Recipe Name"}, wrapper_html: {class: "mb-2"} %>
  <%= link_to "Cancel", :recipes, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end%>
