<div class="flex items-center my-1">
	<span class="mr-2">
		<%= ingredient.quantity %>
		<%= ingredient.unit %>
	</span>
	<span class="mr-2">
		<%= link_to ingredient.name, items_path(q: ingredient.name) %>

		<% if @my_bar_items.include? ingredient.name %>
			<i class="fa-solid fa-check"></i>
		<% end %>
	</span>
</div>
