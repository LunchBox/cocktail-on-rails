
<div class="my-4">
  <%= render "items/breadcrumbs", item: @item %>
</div>

<div class="my-4">
  <h1 class="text-xl"><%= @item.name %></h1>
  <span class="text-sm text-gray-400">
    <%= @item.involved_ingredient_size %> cocktails
  </span>
</div>

<div class="my-4 flex">
  <%= link_to "Edit", [:edit, @item], class: "btn btn--light mr-1" %>
  <%= button_to "Delete", @item, method: :delete, class: "btn btn--light", form: {data: {turbo_stream: "_top"}} %>
</div>

<h3 class="my-4 font-bold">Recipes</h3>
<div class="my-4">
  <% @item.involved_ingredients.each do |ingredient| %>
    <%= render ingredient.recipe %>
  <% end %>
</div>
