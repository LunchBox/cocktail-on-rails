<%= simple_form_for item, html: { class: "" } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.file_field :cover_image if false %>
  <%= f.input :name, label: false, wrapper_html: {class:"mb-2"}, input_html: {placeholder: "Item Name"} %>

  <div data-controller="autocomplete" data-autocomplete-url-value="/items/search">
    <%= f.input :parent_name, label: false, input_html: {placeholder: "Item Name", class: "w-auto", data: {autocomplete_target: 'input'} } %>
    <ul class="list-group absolute" data-autocomplete-target="results"></ul>
  </div>

  <%= f.submit class: "btn btn--secondary" %>
<% end%>
